[project]
org='rte'
name='yocto-bsp'

[build]
command='./build.sh -v'
files='build/tmp/deploy/images/votp/rte-image-votp.wic.gz
       build/tmp/deploy/images/README.pdf'
archive='%Po-%Pn-$(scripts/get-version).tar.gz'
tar_options='-h'
tar_transform='yes'
flavors='sfl_ci dbg guest_dbg test guest_test bios guest bios_dbg bios_test'

[sfl_ci]
command='./build.sh -v \
	--dl-dir /mnt/dldir \
	--sstate-dir /mnt/sstate'

[dbg]
command='./build.sh -v -i rte-dbg-image'

[guest_dbg]
command='./build.sh -v -i rte-guest-dbg-image'

[test]
command='./build.sh -v -i rte-test-image'

[guest_test]
command='./build.sh -v -i rte-guest-test-image'

[bios]
command='./build.sh -v -i rte-bios-image'

[bios_dbg]
command='./build.sh -v -i rte-bios-dbg-image'

[bios_test]
command='./build.sh -v -i rte-bios-test-image'

[guest]
command='./build.sh -v -i rte-guest-image'
